{
  "collectCoverageFrom": [
    "app/**/*.{js,jsx,ts,tsx}",
    "!**/node_modules/**",
    "!app/**/*.story.{js,ts}",
    "!dist"
  ],
  "coverageReporters": [
    "cobertura",
    "html",
    "lcov",
    "text"
  ],
  "moduleNameMapper": {
    "\\.(css|less)$": "<rootDir>/__mocks__/cssMock.js"
  },
  "transform": {
    "^.+\\.(jsx?|tsx?)$": "ts-jest"
  },
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/__tests__/mock"
  ],
  "unmockedModulePathPatterns": [
    "/node_modules",
    "/app"
  ],
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": [
    "js",
    "jsx",
    "json",
    "ts",
    "tsx"
  ]
}
