{
  "automock": false,
  "collectCoverageFrom": [
    "app/**/*.{js,jsx}",
    "!**/node_modules/**",
    "!app/**/*.story.js"
  ],
  "coverageReporters": [
    "cobertura",
    "html",
    "lcov",
    "text"
  ],
  "moduleNameMapper": {
    "\\.(css|less)$": "<rootDir>/__mocks__/cssMock.js"
  },
  "transform": {
    "^.+\\.(ts|tsx)$": "<rootDir>/scripts/jest-preprocessor.js",
    "^.+\\.(js|jsx)$": "babel-jest"
  },
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/__tests__/mock"
  ],
  "unmockedModulePathPatterns": [
    "/node_modules",
    "/app"
  ],
  "moduleFileExtensions": [
    "js",
    "jsx",
    "json"
  ]
}
